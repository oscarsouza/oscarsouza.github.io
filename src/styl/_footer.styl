.contact-icons
	background $red url('../img/detalhe1.png')
	background-repeat repeat
	width 100%
	display table
	padding rem(30px) 0
	li
		color $white
		text-align center
		margin 0 0 rem(20px)
		&:last-child
			margin-bottom 0
		span
			display block
			color #202020
			font-weight 900
			font-size rem(14px)
			margin-bottom rem(5px)
		a
			font-size rem(18px)
	+above(768px)
		ul
			display flex
			justify-content center
		li
			margin 0 rem(40px)
			span
				font-size rem(16px)
			a
				font-size rem(22px)
.footer
	padding 0
	width 100%
	display table
	a 
		transition $transition
		&:hover 
			opacity .5
			
.footer-container
	background-color #202020
	h4
		margin-top 0
		padding 0 0 rem(15px)
		color $white
		text-transform uppercase
		position relative
		letter-spacing rem(1px)
		&:before
			content ''
			width rem(40px)
			height rem(4px)
			background-color $red
			position absolute
			bottom 0	
	li 
		margin-bottom rem(7px)
		&:last-child
			margin-bottom 0
		a
			font-size rem(14px)
			color #ccc
	p
		font-size rem(14px)
		color #ccc
		line-height 1.4

.footer-copy
	background-color #282929
	padding rem(20px) 0
	background-image url('../img/sidebar-bg.png')
	background-repeat no-repeat
	background-position 0 40%
	.footer-logo-white
		display block
		width rem(100px)
		margin rem(-40px) auto rem(40px)
	p
		margin 0
		text-align center
		color #ccc
		font-size rem(13px)

.footer-social
	li
		display inline-block
		margin-right rem(8px)
		&:last-child
			margin-right 0
	a
		width rem(45px)
		height rem(45px)
		display block
		line-height rem(45px)
		color $white
		text-align center
		font-size rem(20px)
		border-bottom rem(3px) solid rgba(0,0,0,.3)
		transition $transition
	.facebook
		background-color #3a5795
	.google
		background-color #cb4437